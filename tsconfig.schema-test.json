{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020",
    "outDir": "./tmp-tests",
    "noEmit": false,
    "emitDeclarationOnly": false,
    "declaration": false,
    "sourceMap": false,
    "allowJs": false,
    "strict": true,
    "baseUrl": "."
  },
  "include": [
    "tests/**/*.ts",
    "src/lib/utils/schema.ts",
    "src/lib/types/**/*.ts"
  ]
}
